#include <stdio.h>

int main() {
    // Write C code here
   int cod;
   float resultado, num1, num2;
   
   printf("Vamos calcular!\n Lembrando que: \n Adição é 1\n Subtração é 2\n Divisão é 3\n Multiplicação é 4\n ");
   printf("Digite a operação desejada: ");
   scanf("%d", &cod);
   
   printf("Digite o primeiro número: ");
   scanf("%f", &num1);
   
   printf("Digite o segundo número: ");
   scanf("%f", &num2);
   
   if (cod==1) {
       resultado=num1+num2;
       printf("O resultado é: %.2f", resultado);
   }  else
   if(cod==2){
       resultado=num1-num2;
       printf("O resultado é: %.2f", resultado);
   } else
   if(cod==3){
       resultado=num1/num2;
       printf("O resultado é: %.2f", resultado);
   }  else
   if(cod==4){
       resultado=num1*num2;
       printf("O resultado é: %.2f", resultado);
   } 
    return 0;
}
