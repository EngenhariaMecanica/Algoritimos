#include <stdio.h>

int main() {
    int ano = 0;
    float chico = 1.5, juca = 1.1;

    while(chico >= juca) {
        
        chico += 0.02;
        
        juca += 0.03;
        
        ano++;
        printf("\nAno: %d\nChico: %.2f\t\tJuca: %.2f\n", chico, juca, ano);
    }
    printf("Sao necessarios %d anos!\n\n", ano);


  return 0;
  }
