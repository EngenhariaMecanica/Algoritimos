#include <stdio.h>

int main() {
  float n1, n2, n3, maior;
	
	printf("Digite o primeiro numero: ");
	scanf("%f", &n1);

  printf("Digite o segundo numero: ");
	scanf("%f", &n2);

  printf("Digite o terceiro numero: ");
	scanf("%f", &n3);

  if(n1>n2 && n1>n3) {
  maior = n1;
  }
  else
  if(n2>n1 && n2>n3){
  maior= n2;
  }
  else
  if(n3>n1 && n3>n2){
  maior = n3;
  }
  
  printf("O maior valor Ã©: %2.f\n", maior);
  return 0;
}
